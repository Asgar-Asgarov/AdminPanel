@model List<Category>
@{
    ViewData["Title"] = "Category";
}
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Basic Table</h4>

                  <a asp-action="Create" class="btn btn-success">Create Category</a>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Description</th>
                          <th>Settings</th>
                         </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                        {
                             <tr>
                          <td>@item.Name</td>
                          <td>@item.Description.Substring(0,10)...</td>
                          <td>
                            <a class="btn btn-outline-primary"><i class="mdi mdi-account-card-details"></i></a>
                            <a class="btn btn-outline-warning"><i class="mdi mdi-tooltip-edit"></i></a>
                            <a class="btn btn-outline-danger"><i class="mdi mdi-delete"></i></a>
                          </td>
                         
                        </tr>
                        }
                       

                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
        </div>